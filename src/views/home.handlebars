<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div>
    <h1>Bienvenido al Ecommerce {{user.email}}</h1>
    <p>{{user.name}}</p>
    {{#if user.userRole}}
        <h4>Tipo de rol: admin</h4>
    {{else}}
        <h4>Tipo de rol: usuario</h4>
    {{/if}}
    <h2>Listado de productos</h2>
    {{#each products.products}}
        <h6>{{this.title}}</h6>
        <p>{{this.category}}</p>
        <p>{{this.description}}</p>
        <p>{{this.price}}</p>
        <p>{{this.stock}}</p>
    {{/each}}
    <button class="logout">Logout</button>
    <script src="/files/logout.js"></script>
</div>
</body>
</html>
